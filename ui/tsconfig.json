{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "../ui/dist",  // Output directory for compiled JavaScript files
    "rootDir": "../ui/src",  // Directory for TypeScript source files
    "jsx": "preserve",
    "allowJs": true,
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": [
    "node_modules"
  ]
}
